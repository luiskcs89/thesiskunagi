package scrum.client.project;

import ilarkesto.core.html.ToHtmlSupport;

public class UsabilityMechanismRecomendation implements ToHtmlSupport {

	public enum AFFECTED_ENTITY {
		ACCEPTANCE_CRITERIA, DEPENDENT_USABILITY_TASK, INDEPENDENT_USABILITY_TASK, USABILITY_USER_STORY,
	}

	boolean add;
	boolean edit;
	String label;
	UsabilityMechanism um;
	AFFECTED_ENTITY ae;

	UsabilityMechanismRecomendation(boolean add, boolean edit, String label, UsabilityMechanism um, AFFECTED_ENTITY ae) {
		this.add = add;
		this.edit = edit;
		this.label = label;
		this.um = um;
		this.ae = ae;
	}

	@Override
	public String toHtml() {
		// TODO Auto-generated method stub
		String html = "";
		if (add) html += "Add ";
		if (edit) html += "Modify ";
		html += " - " + label;
		return html;
	}
}
